<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape>
            <solid android:color="#fff" />
            <stroke
                android:width="1dp"
                android:color="#fcc" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape>
            <solid android:color="#eee" />
            <stroke
                android:width="1dp"
                android:color="#fbb" />
        </shape>
    </item>
</selector>